pipeline {
    agent  { 
        label 'master'
           }
  stages {
        stage("First step") {
            steps {
                echo "Hello  WorlD"
                   }
                             }
         stage("Second step") {
            steps {
                node {
    withCredentials([usernamePassword(credentialsId: 'root', passwordVariable: 'q1', usernameVariable: 'root')]) {
        remote.user = userName
        remote.password = password

        stage("SSH Steps Rocks!") {
            sshCommand remote: remote, command: "uname"

        }
    }
}
                  }
               }
        
    }
}
