pipeline {
    agent  { 
        label 'master'
           }
  stages {
        stage("First step") {
            steps {
                echo "Hello  WorlD"
                   }
                             }
         stage("Second step") {
            steps {
                node {
                        remote.host = '10.122.0.195'
                        remote.user = 'root'
                        remote.password = 'q1'
                        remote.allowAnyHosts = true
                        stage('Remote SSH') {
                        sshCommand remote: remote, command: "ls -l"
                        sshCommand remote: remote, command: "uname"
                             }
                                 }
                  }
               }
        
    }
}
